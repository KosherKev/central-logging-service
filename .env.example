PORT=8080
NODE_ENV=development
MONGODB_URI=mongodb://localhost:27017/central-logging

# Comma-separated API keys for authentication
API_KEYS=dev-key-123,prod-key-456

# Google Cloud Storage Configuration (optional - for archiving old logs)
GCS_BUCKET_NAME=your-logging-bucket
GCS_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./service-account-key.json

# Log Retention Configuration
HOT_STORAGE_DAYS=7
COLD_STORAGE_DAYS=90

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
